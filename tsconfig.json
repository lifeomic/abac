{
  "extends": "@lifeomic/typescript-config",
  "compilerOptions": {
    "target": "es2022",
    "module": "commonjs",
    "lib": ["ES2022", "dom"],
    "types": ["node"],
    "resolveJsonModule": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "noEmit": true
  },
  "include": [
    "./src/**/*.ts",
    "./test/**/*.ts"
  ],
  "exclude": [
    "./node_modules"
  ],
  "ts-node": {
    "files": true
  }
}
