{
  "name": "@lifeomic/abac",
  "version": "0.0.0",
  "description": "LifeOmic Attribute Based Access Control Support Module",
  "main": "./dist/index.js",
  "browser": "./lib/index.js",
  "module": "./module/index.js",
  "types": "./dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/lifeomic/abac.git"
  },
  "files": [
    "dist/**/*",
    "lib/**/*",
    "module/**/*",
    "LICENSE"
  ],
  "author": "LifeOmic <development@lifeomic.com>",
  "license": "MIT",
  "scripts": {
    "lint": "eslint src test",
    "pretest": "yarn lint",
    "test": "nyc ava --verbose",
    "jenkins-test": "ENV=ava ava --tap | tap-xunit --package unit > test-report.xml",
    "build-babel": "babel ./src --extensions '.ts' --source-maps --out-dir",
    "build-typescript": "tsc --project tsconfig.build.json --outDir",
    "build-browser": "BABEL_ENV=browser yarn build-babel ./lib && yarn build-typescript ./lib",
    "build-module": "BABEL_ENV=module yarn build-babel ./module && yarn build-typescript ./module",
    "build-node": "yarn build-babel ./dist && yarn build-typescript ./dist",
    "build": "yarn build-node && yarn build-browser && yarn build-module",
    "clean": "rm -rf dist lib module"
  },
  "dependencies": {
    "fast-deep-equal": "^3.1.3",
    "lodash.clonedeep": "^4.5.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.18.10",
    "@babel/core": "^7.19.1",
    "@babel/preset-env": "^7.19.1",
    "@babel/preset-typescript": "^7.18.6",
    "@lifeomic/eslint-config-standards": "^3.0.0",
    "@lifeomic/typescript-config": "^2.0.0",
    "@types/lodash.clonedeep": "^4.5.7",
    "@types/node": "^18",
    "ajv": "^6.5.0",
    "ava": "^3.15.0",
    "conventional-changelog-conventionalcommits": "^5.0.0",
    "eslint": "^8.21.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "nyc": "^11.8.0",
    "prettier": "^2.7.1",
    "semantic-release": "^19.0.3",
    "sinon": "^5.0.7",
    "tap-xunit": "^2.3.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5",
    "uuid": "^3.3.2"
  },
  "peerDependencies": {
    "ajv": ">=6.5.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "eslintConfig": {
    "extends": [
      "@lifeomic/standards/typescript",
      "prettier",
      "plugin:prettier/recommended"
    ],
    "env": {
      "commonjs": true,
      "node": true
    },
    "parserOptions": {
      "ecmaVersion": 2022,
      "sourceType": "module"
    },
    "rules": {
      "no-case-declarations": "off"
    },
    "ignorePatterns": [
      "dist",
      "lib",
      "module"
    ]
  },
  "ava": {
    "timeout": "30s",
    "files": [
      "test/**/*.test.js",
      "test/**/*.test.ts"
    ],
    "require": [
      "ts-node/register/transpile-only"
    ],
    "extensions": [
      "ts",
      "js"
    ],
    "failWithoutAssertions": false,
    "verbose": true,
    "concurrency": 1,
    "failFast": true
  },
  "nyc": {
    "check-coverage": true,
    "lines": 100,
    "statements": 100,
    "functions": 100,
    "branches": 100
  },
  "babel": {
    "env": {
      "development": {
        "presets": [
          "@babel/preset-typescript",
          [
            "@babel/preset-env",
            {
              "targets": {
                "node": "14"
              }
            }
          ]
        ],
        "plugins": [
          "@babel/plugin-transform-typescript"
        ]
      },
      "browser": {
        "presets": [
          "@babel/preset-typescript",
          [
            "@babel/preset-env",
            {
              "targets": {
                "browsers": "last 2 versions, ie 10-11"
              },
              "modules": false
            }
          ]
        ],
        "plugins": [
          "@babel/plugin-transform-typescript"
        ]
      },
      "module": {
        "presets": [
          "@babel/preset-typescript",
          [
            "@babel/preset-env",
            {
              "targets": {
                "node": "14"
              },
              "modules": false
            }
          ]
        ],
        "plugins": [
          "@babel/plugin-transform-typescript"
        ]
      }
    },
    "sourceMaps": true
  }
}
