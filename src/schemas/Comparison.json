{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Comparison",
  "description": "An individual ABAC attribute comparison",
  "type": "object",
  "oneOf": [
    {
      "properties": {
        "comparison": {
          "type": "string",
          "enum": ["superset", "in"]
        },
        "value": {
          "type": "array",
          "items" : {
            "type": "string"
          }
        }
      },
      "required": ["comparison", "value"],
      "additionalProperties": false
    },
    {
      "properties": {
        "comparison": {
          "type": "string",
          "enum": ["includes", "equals", "notEquals"]
        },
        "value": {
          "type": ["number", "string"]
        }
      },
      "required": ["comparison", "value"],
      "additionalProperties": false
    },
    {
      "properties": {
        "comparison": {
          "type": "string",
          "enum": ["superset", "in", "equals", "includes", "notEquals"]
        },
        "target": {
          "type": "string",
          "pattern": "^[$a-zA-Z_][$0-9a-zA-Z_]*(\\.[$0-9a-zA-Z_]*)*$"
        }
      },
      "required": ["comparison", "target"],
      "additionalProperties": false
    },
    {
      "properties": {
        "comparison": {
          "type": "string",
          "not": {"enum": ["superset", "in", "equals", "includes", "notEquals"]}
        }
      },
      "required": ["comparison"],
      "additionalProperties": true
    }
  ]
}
